<div class="inner">
  <div class = "trello_console">
    <div class = "trello_header">
      <h1 class="trello">Trello </h1>
    </div>


    <div class="new_board">
      <h1>New Board</h1>
      <form class="new-board-item">

        <label for='title'>Title</label><br>
        <input type='text'
             name='board[title]'
             id='title'
             value=''><br>

        <button class="submit">Submit</button>
      </form>
    </div>
  </div>

  <% boards.each(function(board) { %>
  <div class="board-object">
    <a href="#/boards/<%= board.id %>"><%= board.escape("title") %></a>
    <br>
    <button class="delete" data-id="<%=board.id%>">Delete</button>
  </div>
  <% }) %>
</div>
